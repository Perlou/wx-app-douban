.film-detail-head {
    position: relative;
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    overflow: hidden;
}

.film-detail-head:before {
    content: ' ';
    display: block;
    width: 100%;
    height: 600rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    background-color: rgba(0, 0, 0, 0.6);
}

.film-detail-head-bg {
    width: 100%;
    height: 600rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -2;
    background-size: cover;
    background-position: center;
    filter: blur(30rpx);
}